<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<padding>
		<Insets bottom="10" left="25" right="25" top="25" />
	</padding>

	<Text text="Neuer Server" GridPane.columnIndex="0"
		GridPane.columnSpan="2" GridPane.rowIndex="0" />

	<Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="1" />

	<TextField fx:id="serverNameField" promptText="Name goes here.."
		GridPane.columnIndex="1" GridPane.rowIndex="1" />
		
    <Label fx:id="errorOut"
    	GridPane.columnIndex="0" GridPane.rowIndex="2"
    	GridPane.columnSpan="2"/>

	<HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1"
		GridPane.rowIndex="4">
		<Button onAction="#handleNewServerSubmitButton" text="Erstellen" />
	</HBox>


</GridPane>
